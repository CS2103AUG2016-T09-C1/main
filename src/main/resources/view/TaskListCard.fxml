<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox id="cardPane" fx:id="cardPane" maxHeight="80.0" minHeight="40.0" prefHeight="40.0" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <GridPane HBox.hgrow="ALWAYS">
            <columnConstraints>
                <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" maxWidth="500.0" minWidth="500.0" prefWidth="500.0" />
            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="150.0" minWidth="150.0" prefWidth="150.0" />
            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="120.0" minWidth="120.0" prefWidth="120.0" />
            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="150.0" minWidth="150.0" prefWidth="150.0" />
            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="120.0" minWidth="120.0" prefWidth="120.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="250.0" prefWidth="250.0" />
            </columnConstraints>
            <children>
                <VBox alignment="CENTER_LEFT" minHeight="40.0" prefHeight="40.0" spacing="8.0" GridPane.columnIndex="0">
                    <stylesheets>
                        <URL value="@DarkTheme.css" />
                        <URL value="@Extensions.css" />
                    </stylesheets>
                    <padding>
                        <Insets bottom="5" left="15" right="5" top="5" />
                    </padding>

                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="5.0">
                            <children>
                              <Label fx:id="isCompleted" styleClass="cell_small_label" text="\$isCompleted" />
                              <Label fx:id="hasReminders" styleClass="cell_small_label" text="\$hasReminders" />
                                 <Label fx:id="id" styleClass="cell_big_label" text="\$id" />
                                 <Label fx:id="name" maxWidth="450.0" styleClass="cell_big_label" text="\$first" wrapText="true" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
                  <Label fx:id="endTime" styleClass="cell_big_label" text="\$endTime" GridPane.columnIndex="4">
               <font>
                  <Font size="17.0" />
               </font></Label>
                  <Label fx:id="startTime" styleClass="cell_big_label" text="\$startTime" GridPane.columnIndex="2">
               <GridPane.margin>
                  <Insets />
               </GridPane.margin>
               <font>
                  <Font size="17.0" />
               </font>
            </Label>
                  <Label fx:id="endDate" styleClass="cell_big_label" text="\$endDate" GridPane.columnIndex="3">
               <font>
                  <Font size="17.0" />
               </font></Label>
                  <Label fx:id="startDate" styleClass="cell_big_label" text="\$startDate" GridPane.columnIndex="1">
               <font>
                  <Font size="17.0" />
               </font></Label>
                    <Label fx:id="tags" styleClass="cell_big_label" text="\$tags" wrapText="true" GridPane.columnIndex="5">
               <font>
                  <Font size="17.0" />
               </font>
               <GridPane.margin>
                  <Insets left="40.0" />
               </GridPane.margin></Label>
            </children>
         <rowConstraints>
            <RowConstraints />
         </rowConstraints>
        </GridPane>
    </children>
</HBox>
